# Safe Job Platform - Test Environment Configuration
# Used by CI/CD and automated testing

# Django Configuration
DEBUG=False
SECRET_KEY=test-secret-key-for-automated-testing-only
DJANGO_SETTINGS_MODULE=config.settings.test
ALLOWED_HOSTS=localhost,127.0.0.1,testserver

# Database Configuration (Test database)
POSTGRES_DB=safejob_test
POSTGRES_USER=safejob_test
POSTGRES_PASSWORD=test_password_not_for_production
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (Test instance)
REDIS_PASSWORD=test_redis_password_not_for_production

# Email Configuration (Test - Console Backend)
EMAIL_BACKEND=django.core.mail.backends.locmem.EmailBackend

# Security Settings (Test environment)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# Logging (Minimal for tests)
LOG_LEVEL=WARNING

# Development Features (Disabled in tests)
ENABLE_DEBUG_TOOLBAR=False
ENABLE_DJANGO_EXTENSIONS=False
ENABLE_SILK_PROFILER=False

# File Storage (Test - Memory/Temp)
MEDIA_URL=/media/
STATIC_URL=/static/

# API Configuration
API_VERSION=v1
API_TITLE="Safe Job Platform API (Test)"
API_DESCRIPTION="Test environment for Safe Job Platform"

# Rate Limiting (Disabled for tests)
RATELIMIT_ENABLE=False
RATELIMIT_VIEW_RATE=10000/h
RATELIMIT_LOGIN_RATE=1000/h
