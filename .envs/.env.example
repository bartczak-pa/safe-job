# Safe Job Platform - Environment Configuration Example
# Copy this file to .env.development.local for development
# Generate secure passwords for production deployment

# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=config.settings.development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,backend

# Database Configuration
POSTGRES_DB=safejob
POSTGRES_USER=safejob
POSTGRES_PASSWORD=your-secure-database-password-here

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here

# Email Configuration (Development - Console Backend)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
RESEND_API_KEY=your-resend-api-key-for-development

# Security Settings (Development)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://frontend:3000
CORS_ALLOW_CREDENTIALS=True

# Logging
LOG_LEVEL=DEBUG

# Development Features
ENABLE_DEBUG_TOOLBAR=True
ENABLE_DJANGO_EXTENSIONS=True
ENABLE_SILK_PROFILER=False

# File Storage (Development - Local)
MEDIA_URL=/media/
STATIC_URL=/static/

# API Configuration
API_VERSION=v1
API_TITLE="Safe Job Platform API"
API_DESCRIPTION="Secure platform connecting legitimate hiring agencies with temporary workers"

# Rate Limiting (Relaxed for development)
RATELIMIT_ENABLE=True
RATELIMIT_VIEW_RATE=1000/h
RATELIMIT_LOGIN_RATE=100/h
